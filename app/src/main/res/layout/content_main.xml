<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nightcap.testapp1.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/trial_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/input_msg"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/db_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/save_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/query_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/db_header"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/trial_input1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/trial_text"
        android:inputType="text" />

    <Button
        android:id="@+id/save_button"
        android:text="Add"
        android:textSize="15dp"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trial_input1"
        android:layout_toRightOf="@+id/refresh_button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/refresh_button"
        android:text="Refresh"
        android:textSize="15dp"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trial_input1"
        android:layout_toRightOf="@+id/clear_button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/clear_button"
        android:text="Clear"
        android:textSize="15dp"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trial_input1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
